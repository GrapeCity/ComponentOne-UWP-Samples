<Application
    x:Class="ColumnPinning.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ColumnPinning"
    xmlns:c1="using:C1.Xaml.FlexGrid">
    
    <Application.Resources>
        <Style TargetType="ContentControl" x:Key="ColumnFreezeIconStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="{TemplateBinding Content}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
