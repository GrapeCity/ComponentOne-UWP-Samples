<Page x:Class="BasicLibrarySamples.RangeSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="using:C1.Xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:BasicLibrarySamples"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <c1:C1RangeSlider Width="200"
                          Height="10" LowerValue="1" UpperValue="8"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Maximum="10"
                          Minimum="0"
                          ValueChange="1" />
        <c1:C1RangeSlider Grid.Column="1" LowerValue="15" UpperValue="85"
                          Width="10"
                          Height="200"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Orientation="Vertical" />


    </Grid>
</Page>
