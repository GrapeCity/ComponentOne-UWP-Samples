<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c1pdfviewer="using:C1.Xaml.PdfViewer"
    xmlns:local="using:PdfAcroform"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Xaml="using:C1.Xaml"
    x:Class="PdfAcroform.MainPage"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <c1pdfviewer:C1PdfViewer x:Name="c1PdfViewer1" />
        <Button x:Name="btnSave" Content="Save As..." Click="btnSave_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 0 0 10" Height="40" Width="150"/>
        <ProgressRing x:Name="progressRing" />
    </Grid>
</Page>
